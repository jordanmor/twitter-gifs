{
  "name": "twitter-gifs",
  "version": "1.0.0",
  "description": "The latest Twitter trends matched with GIFs",
  "main": "index.js",
  "engines": {
    "node": "10.11.0"
  },
  "scripts": {
    "heroku-postbuild": "cd client && npm run build",
    "build": "cd client && npm run build",
    "install": "(cd server && npm install) && (cd client && npm install)",
